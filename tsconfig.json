{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["dom", "dom.iterable", "es6"],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": false,
        "noEmit": true,
        "checkJs": false
    },
    "exclude": [
        "node_modules",
        "webscraper.js",
        "**/*.spec.js",
        "**/*.test.js"
    ]
}
